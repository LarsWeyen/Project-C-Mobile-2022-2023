<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Project_Lars_Weyen.Resources.Styles.Styling">

    <Color x:Key="backgroundColor">#18171F</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Style TargetType="Label" x:Key="lblTitle">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Bold"/>
    </Style>
    <Style TargetType="Frame" x:Key="frame">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="IsClippedToBounds" Value="True"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BackgroundColor" Value="#212026"/>
        <Setter Property="BorderColor" Value="#868686"/>
    </Style>
</ResourceDictionary>