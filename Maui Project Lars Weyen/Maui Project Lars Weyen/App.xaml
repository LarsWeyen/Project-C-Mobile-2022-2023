<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui_Project_Lars_Weyen"
             x:Class="Maui_Project_Lars_Weyen.App"
             xmlns:converter="clr-namespace:Maui_Project_Lars_Weyen.Converters"
             xmlns:behavior="clr-namespace:Maui_Project_Lars_Weyen.Behaviors">
    <Application.Resources>
        <ResourceDictionary>
            <converter:GameRatingConverter x:Key="GameRatingConverter"></converter:GameRatingConverter>
            <converter:GameRatingColorConverter x:Key="GameRatingColorConverter"></converter:GameRatingColorConverter>
            <converter:CharLimitConverter x:Key="CharLimitConverter"></converter:CharLimitConverter>
            <behavior:PasswordLengthBehavior x:Key="PasswordLengthBehavior"></behavior:PasswordLengthBehavior>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styling.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
